<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.iolll.kit.FilterBar.FilterActivity">
    <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/title_bar"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#333"
            android:layout_width="match_parent"
            android:layout_height="50dp">

    </LinearLayout>
    <ScrollView
            android:id="@+id/scroll_view"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/title_bar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        <TextView android:layout_width="match_parent"
                  android:text="@string/large_textx"
                  android:layout_height="match_parent"/>

    </ScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/filter_bar_layout"
            android:background="#00585858"
            app:layout_constraintTop_toBottomOf="@+id/title_bar"
            android:layout_width="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="0dp">
        <LinearLayout
                android:id="@+id/filter_content_layout"
                android:background="#fff"
                app:layout_constraintTop_toBottomOf="@+id/filter_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:textColor="#ff6767"
                    android:text="@string/large_text"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
                android:background="#fff"
                android:id="@+id/filter_bar"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
            <TextView
                    android:id="@+id/tuijian_btn"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="推荐排序"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="星级价格"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="位置区域"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="筛选"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
